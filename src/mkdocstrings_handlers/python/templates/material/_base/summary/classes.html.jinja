{#- Summary of classes. -#}

{% block logs scoped %}
  {#- Logging block.

  This block can be used to log debug messages, deprecation messages, warnings, etc.
  -#}
{% endblock logs %}

{% if not obj.docstring.parsed | selectattr("kind.value", "eq", "classes") | list %}
  {% with section = obj.classes
      |filter_objects(
        filters=config.filters,
        members_list=config.members,
        inherited_members=config.inherited_members,
        keep_no_docstrings=config.show_if_no_docstring,
      )
      |order_members(config.members_order, config.members)
      |as_classes_section(check_public=not config.members)
    %}
    {% if section %}{% include "docstring/classes.html.jinja" with context %}{% endif %}
  {% endwith %}
{% endif %}
